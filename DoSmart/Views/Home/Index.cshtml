@model List<DoSmart.Models.Activity>
@{
    ViewBag.Title = "Home Page";
}

<section class="content">    
    <div class="banner">
        <ul class="activities">
            <li>
                Agregar Nueva Actividad
            </li>
            <li>
                Primera Actividad
            </li>
            <li>
                Segunda Actividad
            </li>
        </ul>
    </div>
    <div class="details">
        <h2>To do Activities:</h2>
        <section class="subtasks">
            <ul>
                @foreach (var activity in Model)
                    {
                    if (!activity.Done)
                    {
                        <li>
                            <h3>@activity.Title</h3>
                            @activity.Creator.Name           
                            <p>@activity.Content</p>
                            <a href="@Url.Action("Edit", "Activities", new { id = activity.Id})">Edit</a> |
                            <a href="#" class="js-delete-activity" data-activity-id="@activity.Id">Delete</a>
                        </li>
                    }
                    }
            </ul>
        </section>

        <h2>Done Activities:</h2>
        <ul>
            @foreach (var activity in Model)
                {
                if (activity.Done)
                {
                    <li>
                        <h3>@activity.Title</h3>
                        @activity.Creator.Name
                        <p>@activity.Content</p>
                        <a href="#" class="js-delete-activity" data-activity-id="@activity.Id">Delete</a>
                    </li>
                }
                }
        </ul>
    </div>
</section>


@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-delete-activity").click(function (e) {
                var link = $(e.target);
                bootbox.dialog({
                    title: 'Confirm',
                    message: "Are you sure you want to delete this activity?",
                    buttons: {
                        cancel: {
                            label: "No",
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        ok: {
                            label: "Yes",
                            className: 'btn-danger',
                            callback: function () {
                                $.ajax({
                                    url: "/api/activities/" + link.attr("data-activity-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        link.parents("li").fadeOut(function () {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function () {
                                        alert("Something failed!");
                                    });
                            }
                        }
                    }
                })
            })
        })
    </script>
}