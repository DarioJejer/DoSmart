@model DoSmart.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<section class="content">    
    <div class="banner">

        <div class="banner-header"><h3>Proyects</h3></div>

        <ul class="proyects_list">
            @foreach (var project in Model.Projects)
            {
                <li>
                    <a href="/Home/Index/@project.Id">@project.Title</a>
                    <button class="delete-button js-delete-project" data-project-id="@project.Id">
                        <i class="bi bi-x"></i>
                    </button>
                </li>
            }
        </ul>
        <a href="/Projects/Create"><i class="bi bi-plus-circle"></i></a>
    </div>

    <div class="details">
        <a href="/Activities/Create"><i class="bi bi-plus-square"></i></a>
        @if (Model.ToDoActivities.Count() != 0)
         {
             <section class="activities_list">
                <h2>To do</h2>
                <hr style="width: 30%; color: black"/>
                <ul>
                    @foreach (var activity in Model.ToDoActivities)
                     {
                        <li>                            
                            <input id="activity-@activity.Id" type="checkbox">
                            <label for="activity-@activity.Id" class="checkbox-button" data-activity-id="@activity.Id"></label>
                            <h4>@activity.Title</h4>
                            <button class="importance-icon">
                                <i class="bi bi-exclamation-circle-fill" style="font-size: 2rem; color: @activity.GetImportanceColor();"></i>
                            </button>
                            <form action="/Activities/Edit/@activity.Id">
                                <button class="edit-button js-edit-activity" type="submit">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                            </form>
                            <button class="delete-button js-delete-activity" data-activity-id="@activity.Id">
                                <i class="bi bi-x"></i>
                            </button>
                            <hr style="margin: 10px auto" />
                            <p>@activity.Content</p>
                        </li>
                     }
                </ul>
            </section>
         }

        @if (Model.DoneActivities.Count() != 0)
         {
            <section class="activities_list">
                <h2>Done</h2>
                <hr style="width: 30%"/>
                <ul id="done-activities">
                    @foreach (var activity in Model.DoneActivities)
                    {
                        <li>
                            <input id="activity-@activity.Id" type="checkbox" checked>
                            <label for="activity-@activity.Id" class="checkbox-button" data-activity-id="@activity.Id"></label>
                            <h4>@activity.Title</h4>
                            <button class="delete-button js-delete-activity" data-activity-id="@activity.Id">
                                <i class="bi bi-x"></i>
                            </button>
                            <hr style="margin: 10px auto" />
                            <p>@activity.Content</p>
                        </li>
                    }
                </ul>
            </section>
         }
    </div>
</section>


@section scripts
{
    <script>
        $(document).ready(function () {
            $(".side-label").click(function (e) {
                var checkbox = $(e.target);
                $.ajax({
                    url: "/api/activities/" + checkbox.attr("data-activity-id"),
                    method: "PUT"
                })
                    .done(function () {
                        checkbox.parents("li").fadeOut(1000, function () {
                            $(this).prependTo($("#done-activities"));
                            $(this).children("form").remove();
                            $(this).children(".importance-icon").remove();
                            $(this).fadeTo(500, 0.5);
                        });
                    })
                    .fail(function () {
                        alert("Something failed!");
                    })
            })
            $(".js-delete-activity").click(function (e) {
                var button = $(e.target);
                bootbox.dialog({
                    title: 'Confirm',
                    message: "Are you sure you want to delete this activity?",
                    buttons: {
                        cancel: {
                            label: "No",
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        ok: {
                            label: "Yes",
                            className: 'btn-danger',
                            callback: function () {
                                $.ajax({
                                    url: "/api/activities/" + button.attr("data-activity-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        button.parents("li").fadeOut(function () {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function () {
                                        alert("Something failed!");
                                    });
                            }
                        }
                    }
                })
            })
            $(".js-delete-project").click(function (e) {
                var button = $(e.target);
                bootbox.dialog({
                    title: 'Confirm',
                    message: "Are you sure you want to delete this project?",
                    buttons: {
                        cancel: {
                            label: "No",
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        ok: {
                            label: "Yes",
                            className: 'btn-danger',
                            callback: function () {
                                $.ajax({
                                    url: "/api/projects/" + button.attr("data-project-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        button.parents("li").fadeOut(function () {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function () {
                                        alert("Something failed!");
                                    });
                            }
                        }
                    }
                })
            })
        })
    </script>
}